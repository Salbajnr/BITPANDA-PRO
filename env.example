# Environment Variables Template
# Copy this file to .env in the server directory and update the values

# Supabase Configuration
# Get these from your Supabase project settings: https://app.supabase.com
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# Database Configuration (Supabase PostgreSQL)
# Format: postgresql://postgres:[YOUR-PASSWORD]@[PROJECT-REF].supabase.co:6543/postgres
# Get this from Supabase Project Settings > Database
DATABASE_URL=

# Server Configuration
NODE_ENV=development
PORT=5000

# API Keys (Optional - for full functionality)
# Get free API keys from:
# - CoinGecko: https://coingecko.com/en/api
# - NewsAPI: https://newsapi.org/
# - Metals API: https://metals-api.com/
COINGECKO_API_KEY=
NEWS_API_KEY=
METALS_API_KEY=

# Security
# Generate a random 32+ character string
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
COOKIE_SECRET=your-super-secret-cookie-key-min-32-chars-long

# OAuth Configuration
# Google OAuth - Get from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# Facebook OAuth - Get from: https://developers.facebook.com/
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
FACEBOOK_CALLBACK_URL=http://localhost:5000/api/auth/facebook/callback

# Apple OAuth - Get from: https://developer.apple.com/
APPLE_CLIENT_ID=
APPLE_TEAM_ID=
APPLE_KEY_ID=
APPLE_PRIVATE_KEY_PATH=
APPLE_CALLBACK_URL=http://localhost:5000/api/auth/apple/callback

# Database Connection Settings
PGCONNECT_TIMEOUT=60
PGCOMMAND_TIMEOUT=60
